package demo;

import luoghi.*;
import poligoni.*;

public class GeometriaDemo {
	public static void main(String[] args) {
		
		Punto a = new Punto(1, 1);
		Punto b = new Punto(5, 1);
		Punto c = new Punto(3, 4);
		
		Segmento ab = new Segmento(a,b);
		Segmento ac = new Segmento(a,c);
		Segmento bc = new Segmento(b,c);
		
		Triangolo p = new Triangolo(a, b, c);
		Rettangolo r = new Rettangolo(ab, ac);
		Quadrato q = new Quadrato(ab);
		
		System.out.println(p);
		System.out.println(r);
		System.out.println(q);
	}
}

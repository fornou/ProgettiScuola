package poligoni;

import luoghi.Segmento;

public class Rettangolo extends Poligono {

	Segmento base, altezza;
	
	public Rettangolo(Segmento base, Segmento altezza) {
		super("Rettangolo", 4, 4);
		this.base = base;
		this.altezza = altezza;
		this.perimetro = perimetro();
		this.area = area();
	}
	
	@Override
	public double perimetro() {
		return base.lunghezza()*2 + altezza.lunghezza()*2;
	}

	@Override
	public double area() {
		return base.lunghezza()*altezza.lunghezza();
	}

	@Override
	public String toString() {
		return "Rettangolo [lati=" + altezza + " " + base + "perimetro=" + perimetro + ", area="
				+ area + "]";
	}
	
	

}
